{
  "manifest_version": 3,

  "name": "EVRTHN Meta Quest Companion",
  "description": "Share any page directly to your Meta Quest browser with a single click!",
  "version": "0.0.1",
  "icons": {
    "16": "logo512.png",
    "32": "logo32.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Send page to Meta Quest"
  },
  "permissions": [
    "activeTab"
  ]
}